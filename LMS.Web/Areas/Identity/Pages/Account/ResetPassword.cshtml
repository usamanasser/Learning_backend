@page
@model LMS.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
     Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@{
    string id = Request.Query["id"];
}

<div class="col-lg-5 mx-auto">
    <div class="card">
        <div class="card-body p-0 auth-header-box">

            <div class="text-center p-3">
                <a href="/" class="logo logo-admin">
                    <img src="~/website-assets/img/logo/Footer-logo.png" height="70" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">@ViewData["Title"]</h4>
                <p class="text-muted  mb-0">Reset your password.</p>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                    <form class="form-horizontal auth-form" id="account" method="post" asp-controller="Account" asp-action="ResetAccountPassword">
                        <div asp-validation-summary="None" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" for="email">Your Email</label>
                            <div class="input-group">
                                <input type="email" class="form-control" placeholder="Enter Your Email" id="email" name="email">
                            </div>
                        </div>
                         <div class="form-group mb-2">
                            <label class="form-label" for="password">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Enter Password" id="password" name="password">
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label" for="confirmPassword">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Enter Password Again" id="confirmPassword" name="ConfirmPassword">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        @if (!Model.ModelState.IsValid)
                        {
                            <span class="text-danger">@Html.ValidationSummary()</span>
                        }

                        <div class="form-group mb-0 row">
                            <div class="col-12">
                                <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">Reset<i class="fas fa-sign-in-alt ms-1"></i></button>
                            </div><!--end col-->
                        </div> <!--end form-group-->
                    </form><!--end form-->

                </div>
            </div>
        </div><!--end card-body-->
        <div class="card-body bg-light-alt text-center">
            <span class="text-muted d-none d-sm-inline-block">
                LMS © <script>
                          document.write(new Date().getFullYear())
                </script>
            </span>
        </div>

    </div><!--end card-->
</div><!--end col-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
