@page
@using LMS.Web.ExtensionMethods;
@model LMS.Web.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
   
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    var url = ViewData["url"];
    var state = ViewData["state"];
    var returnUrl = ViewData["returnUrl"];
    url = url ?? returnUrl;
}

<div class="col-lg-5 mx-auto">
    <div class="card">
        <div class="card-body p-0 auth-header-box">

            <div class="text-center p-3">
                <a href="/" class="logo logo-admin">
                    <img src="~/website-assets/img/logo/Footer-logo.png" height="70" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18"> @Html.Translate("Let'sGetStarted")</h4>
                <p class="text-muted  mb-0"> @Html.Translate("EnterEmail")</p>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                    <form class="form-horizontal auth-form" id="account" method="post" asp-controller="Account" asp-action="ForgotPassword">
                        <div asp-validation-summary="None" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" for="Email"> @Html.Translate("YourEmail") </label>
                            <div class="input-group">
                                <input type="email" class="form-control" placeholder="@Html.Translate("EnterEmail")" id="username" name="email">
                            </div>
                        </div>
                      
                        @if (!Model.ModelState.IsValid)
                        {
                            <span class="text-danger">@Html.ValidationSummary()</span>
                        }

                        <div class="form-group mb-0 row">
                            <div class="col-12">
                                <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">@Html.Translate("Submit")<i class="fas fa-sign-in-alt ms-1"></i></button>
                            </div><!--end col-->
                        </div> <!--end form-group-->
                    </form><!--end form-->
                   
                </div>
            </div>
        </div><!--end card-body-->
         <div class="card-body bg-light-alt text-center">
            <span class="text-muted d-none d-sm-inline-block">
                LMS © <script>
                                   document.write(new Date().getFullYear())
                </script>
            </span>
        </div>
        
    </div><!--end card-->
</div><!--end col-->

