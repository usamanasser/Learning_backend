@page
@using LMS.Web.ExtensionMethods
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LMS.Web.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    var url = ViewData["url"];
    var state = ViewData["state"];
    var returnUrl = ViewData["returnUrl"];
    returnUrl = returnUrl ?? Model.ReturnUrl;
    url = url ?? returnUrl;
}

<div class="col-lg-5 mx-auto">
    <div class="card">
        <div class="card-body p-0 auth-header-box">
           
            <div class="text-center p-3">
                <a href="/" class="logo logo-admin">
                    <img src="~/website-assets/img/logo/Footer-logo.png" height="70" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">@Html.Translate("Let'sGetStarted")</h4>
                <p class="text-muted  mb-0">@Html.Translate("SignIn")...</p>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                    <form class="form-horizontal auth-form" id="account" method="post" asp-route-returnUrl="@url" asp-route-state="@state">
                        <div asp-validation-summary="None" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label class="form-label" for="username">@Html.Translate("Username")</label>
                            <div class="input-group">
                                <input type="text" asp-for="Input.Email" class="form-control" placeholder="@Html.Translate("EnterEmailOrUserName")" id="username">
                            </div>
                        </div><!--end form-group-->

                        <div class="form-group mb-2">
                            <label class="form-label" for="userpassword">@Html.Translate("Password")</label>
                            <div class="input-group">
                                <input type="password" class="form-control" asp-for="Input.Password" id="userpassword" placeholder="@Html.Translate("EnterPassword")">
                            </div>
                        </div><!--end form-group-->

                        <div class="form-group row my-3">
                            <div class="col-sm-6">
                                <div class="custom-control custom-switch switch-success">
                                    <input type="checkbox" class="custom-control-input" id="customSwitchSuccess">
                                    <label class="form-label text-muted" for="customSwitchSuccess">@Html.Translate("RememberMe")</label>
                                </div>
                            </div><!--end col-->
                            <div class="col-sm-6 text-end">
                                <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword" class="text-muted font-13"><i class="dripicons-lock"></i>@Html.Translate("ForgotPassword?")</a>
                            </div><!--end col-->
                        </div><!--end form-group-->

                        @if (!Model.ModelState.IsValid)
                        {
                            <span class="text-danger">@Html.ValidationSummary()</span>
                        }

                        <div class="form-group mb-0 row">
                            <div class="col-12">
                                <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">@Html.Translate("Login")  <i class="fas fa-sign-in-alt ms-1"></i></button>
                            </div><!--end col-->
                        </div> <!--end form-group-->
                    </form><!--end form-->
                    <div class="m-3 mb-1 text-center text-muted">
                        <p class="mb-0">@Html.Translate("Account")  <a href="/Account/SignUp" class="text-primary ms-2">@Html.Translate("FreeRegister")</a></p>
                    </div>
                    
                </div>
            </div>
        </div><!--end card-body-->
        <div class="card-body bg-light-alt text-center">
            <span class="text-muted d-none d-sm-inline-block">
                LMS © <script>
                                   document.write(new Date().getFullYear())
                </script>
            </span>
        </div>
    </div><!--end card-->
</div><!--end col-->






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

